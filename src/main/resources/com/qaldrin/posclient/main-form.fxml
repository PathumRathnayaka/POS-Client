<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="766.0" prefWidth="1366.0" style="-fx-background-color: #2c3e50;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.qaldrin.posclient.controller.MainformController">

    <children>

        <!-- Welcome title (moved to top center) -->
        <Label alignment="CENTER" layoutX="862.0" layoutY="60.0" prefHeight="50.0" prefWidth="366.0" style="-fx-text-fill: #ecf0f1; -fx-font-weight: bold;" text="Welcome to POS System">
            <font>
                <Font name="System Bold" size="26.0" />
            </font>
        </Label>

        <!-- Main centered login card -->
        <VBox alignment="CENTER" layoutX="790.0" layoutY="133.0" prefHeight="520.0" prefWidth="510.0" spacing="35.0">

            <children>

                <!-- PIN entry section -->
                <VBox alignment="CENTER" spacing="18.0">
                    <children>
                        <Label style="-fx-text-fill: #ecf0f1;" text="Enter Your PIN:" textAlignment="CENTER">
                            <font>
                                <Font size="17.0" />
                            </font>
                        </Label>

                        <TextField fx:id="pinTextField" alignment="CENTER" editable="false" prefHeight="48.0" prefWidth="260.0" promptText="Enter PIN" style="-fx-font-size: 20px;                                           -fx-background-color: #1f2a35;                                           -fx-text-fill: white;                                           -fx-border-color: #25D366;                                           -fx-border-width: 2;                                           -fx-background-radius: 10;                                           -fx-border-radius: 10;                                           -fx-prompt-text-fill: #95a5a6;">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </TextField>
                    </children>
                </VBox>

                <!-- Number pad -->
                <GridPane alignment="CENTER" hgap="12.0" prefWidth="420.0" vgap="12.0">

                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3" />
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.3" />
                    </columnConstraints>

                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                    </rowConstraints>

                    <!-- Row 1 -->
                    <Button fx:id="btn1" onAction="#onNumberClicked" prefHeight="56.0" prefWidth="164.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="1" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn2" onAction="#onNumberClicked" prefHeight="56.0" prefWidth="172.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="2" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn3" onAction="#onNumberClicked" prefHeight="68.0" prefWidth="168.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="3" GridPane.columnIndex="2" GridPane.rowIndex="0">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <!-- Row 2 -->
                    <Button fx:id="btn4" onAction="#onNumberClicked" prefHeight="57.0" prefWidth="185.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="4" GridPane.rowIndex="1">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn5" onAction="#onNumberClicked" prefHeight="57.0" prefWidth="181.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn6" onAction="#onNumberClicked" prefHeight="68.0" prefWidth="170.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <!-- Row 3 -->
                    <Button fx:id="btn7" onAction="#onNumberClicked" prefHeight="66.0" prefWidth="190.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="7" GridPane.rowIndex="2">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn8" onAction="#onNumberClicked" prefHeight="57.0" prefWidth="169.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="8" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn9" onAction="#onNumberClicked" prefHeight="68.0" prefWidth="180.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="9" GridPane.columnIndex="2" GridPane.rowIndex="2">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <!-- Row 4 -->
                    <Button fx:id="btnClear" onAction="#onClearClicked" prefHeight="57.0" prefWidth="179.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="C" GridPane.rowIndex="3">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btn0" onAction="#onNumberClicked" prefHeight="57.0" prefWidth="184.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                    <Button fx:id="btnDelete" onAction="#onDeleteClicked" prefHeight="68.0" prefWidth="201.0" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10;" text="âŒ«" GridPane.columnIndex="2" GridPane.rowIndex="3">
                        <cursor><Cursor fx:constant="HAND" /></cursor>
                    </Button>

                </GridPane>

                <!-- Login / Get Started buttons -->
                <VBox alignment="CENTER" spacing="16.0">
                    <children>
                        <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#onLoginClicked" prefHeight="65.0" prefWidth="220.0" style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-background-radius: 12;" text="Login">
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>

                        <Button fx:id="getStartedbtn" mnemonicParsing="false" onAction="#onGetStarted" prefHeight="60.0" prefWidth="220.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 12;" text="Get Started">
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </Button>
                    </children>
                </VBox>

            </children>
        </VBox>

        <!-- Bottom branding -->
        <Label layoutX="300.0" layoutY="558.0" style="-fx-font-weight: bold;" text="Powered by" textFill="WHITE">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <ImageView fitHeight="70.0" fitWidth="180.0" layoutX="260.0" layoutY="583.0">
            <image>
                <Image url="@images/logo.png" />
            </image>
        </ImageView>

        <!-- Left side decorative logo + slogan -->
        <ImageView fitHeight="140.0" fitWidth="580.0" layoutX="60.0" layoutY="220.0" preserveRatio="true">
            <image>
                <Image url="@images/poslogo.png" />
            </image>
        </ImageView>

        <Label layoutX="180.0" layoutY="380.0" text="Transactions tell the truth of your success" textFill="WHITE">
            <font>
                <Font name="Calibri" size="22.0" />
            </font>
        </Label>

    </children>
</AnchorPane>
