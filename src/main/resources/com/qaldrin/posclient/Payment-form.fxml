<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>

<AnchorPane fx:id="primaryScene"
            prefHeight="717.0" prefWidth="1050.0"
            style="-fx-background-color: #2c3e50;"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qaldrin.posclient.controller.PaymentFormController">

    <children>

        <!-- LEFT SIDE – ITEMS -->
        <AnchorPane layoutX="10" layoutY="10" prefHeight="690" prefWidth="330"
                    style="-fx-background-color: #1f2a35; -fx-background-radius: 12;
                           -fx-border-color: #34495e; -fx-border-radius: 12; -fx-border-width: 1;">

            <children>
                <Label text="Items" layoutX="20" layoutY="20"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 22px; -fx-font-weight: bold;" />

                <ScrollPane layoutX="10" layoutY="60" prefHeight="620" prefWidth="310"
                            style="-fx-background: transparent; -fx-background-color: transparent;"
                            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">

                    <content>
                        <VBox fx:id="itemsVBox"
                              spacing="8"
                              style="-fx-background-color: transparent;">

                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                        </VBox>
                    </content>

                </ScrollPane>
            </children>
        </AnchorPane>

        <!-- RIGHT SIDE – PAYMENT -->
        <AnchorPane layoutX="350" layoutY="10" prefHeight="690" prefWidth="690"
                    style="-fx-background-color: #1f2a35; -fx-background-radius: 12;
                           -fx-border-color: #34495e; -fx-border-radius: 12; -fx-border-width: 1;">

            <children>

                <!-- Header -->
                <Label text="Payment Processing" layoutX="25" layoutY="20"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 24px; -fx-font-weight: bold;" />

                <!-- ACTION BUTTONS -->
                <HBox spacing="15" layoutX="25" layoutY="70">
                    <children>

                        <JFXButton fx:id="cancelButton" text="Cancel" onAction="#onCancel"
                                   prefWidth="150" prefHeight="45"
                                   style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;
                                          -fx-background-radius: 8;">
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </JFXButton>

                        <JFXButton fx:id="taxesButton" text="Taxes" onAction="#onTaxes"
                                   prefWidth="150" prefHeight="45"
                                   style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;
                                          -fx-background-radius: 8;">
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </JFXButton>

                        <JFXButton fx:id="discountButton" text="Discount" onAction="#onDiscount"
                                   prefWidth="150" prefHeight="45"
                                   style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;
                                          -fx-background-radius: 8;">
                            <cursor><Cursor fx:constant="HAND" /></cursor>
                        </JFXButton>

                    </children>
                </HBox>

                <!-- PAYMENT TYPE -->
                <Label text="Payment Type" layoutX="25" layoutY="145"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 20px;" />

                <VBox spacing="10" layoutX="25" layoutY="175">
                    <children>

                        <JFXButton fx:id="cashButton" text="Cash" onAction="#onCashPayment"
                                   prefHeight="45" prefWidth="150"
                                   style="-fx-background-color: #34495e; -fx-text-fill: white;
                                          -fx-font-weight: bold; -fx-background-radius: 8;" />

                        <JFXButton fx:id="checkButton" text="Check" onAction="#onCheckPayment"
                                   prefHeight="45" prefWidth="150"
                                   style="-fx-background-color: #34495e; -fx-text-fill: white;
                                          -fx-font-weight: bold; -fx-background-radius: 8;" />

                        <JFXButton fx:id="cardButton" text="Card" onAction="#onCardPayment"
                                   prefHeight="45" prefWidth="150"
                                   style="-fx-background-color: #34495e; -fx-text-fill: white;
                                          -fx-font-weight: bold; -fx-background-radius: 8;" />

                    </children>
                </VBox>

                <!-- PAYMENT SUMMARY -->
                <Label text="Payment" layoutX="230" layoutY="145"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 20px;" />

                <VBox spacing="10" layoutX="230" layoutY="175">
                    <children>

                        <Label fx:id="paymentTotalLabel"
                               text="Total: $0.00"
                               style="-fx-text-fill: #25D366; -fx-font-size: 20px; -fx-font-weight: bold;" />

                        <TextField fx:id="paidTextField" promptText="Paid"
                                   style="-fx-background-color: #2c3e50; -fx-text-fill: white;
                                          -fx-border-color: #25D366; -fx-background-radius: 8;
                                          -fx-border-radius: 8; -fx-padding: 8;"
                                   prefWidth="250" prefHeight="35" />

                        <Label fx:id="changeLabel" text="Change: $0.00"
                               style="-fx-text-fill: #ecf0f1; -fx-font-size: 16px;" />

                        <Button fx:id="addwalletBtn" text="Add to Wallet"
                                onAction="#addwalletOnClick"
                                prefWidth="170" prefHeight="35"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-background-radius: 8;" />

                        <Label fx:id="oldBalanceLabel" text="Wallet Balance: $0.00"
                               style="-fx-text-fill: #bec3c7; -fx-font-size: 14px;" />

                    </children>
                </VBox>

                <!-- INVOICE SECTION -->
                <Label text="Invoice" layoutX="510" layoutY="145"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px;" />

                <VBox layoutX="510" layoutY="175" spacing="10">
                    <children>

                        <Button fx:id="printInvoiceButton" text="Print Invoice"
                                onAction="#onPrintInvoice" prefWidth="160" prefHeight="40"
                                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 8;" />

                        <Button fx:id="emailInvoiceButton" text="Email Invoice"
                                onAction="#onEmailInvoice" prefWidth="160" prefHeight="40"
                                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 8;" />

                        <Button fx:id="pdfInvoiceButton" text="PDF Invoice"
                                onAction="#onPdfInvoice" prefWidth="160" prefHeight="40"
                                style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-background-radius: 8;" />

                    </children>
                </VBox>

                <!-- CUSTOMER INFO -->
                <Label text="Customer Info" layoutX="25" layoutY="350"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px;" />

                <VBox layoutX="25" layoutY="380" spacing="5">
                    <children>
                        <Label fx:id="saleIdLabel" text="Sale ID: N/A"
                               style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" />

                        <Label fx:id="customerContactLabel" text="Customer: N/A"
                               style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" />
                    </children>
                </VBox>

                <!-- PRICE SUMMARY -->
                <Label text="Price Summary" layoutX="25" layoutY="450"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px;" />

                <VBox layoutX="25" layoutY="480" spacing="8">
                    <children>
                        <Label fx:id="subTotalLabel" text="Sub Total: $0.00"
                               style="-fx-text-fill: #ecf0f1; -fx-font-size: 16px;" />

                        <Label fx:id="taxLabel" text="Tax: $0.00"
                               style="-fx-text-fill: #ecf0f1; -fx-font-size: 16px;" />

                        <Label fx:id="totalLabel" text="Total: $0.00"
                               style="-fx-text-fill: #25D366; -fx-font-size: 20px; -fx-font-weight: bold;" />
                    </children>
                </VBox>

                <!-- COMPLETE PAYMENT BUTTON -->
                <JFXButton fx:id="doneButton"
                           text="Complete Payment" onAction="#onDone"
                           layoutX="450" layoutY="600"
                           prefHeight="45" prefWidth="200"
                           style="-fx-background-color: #25D366; -fx-text-fill: white;
                                  -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 8;">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                </JFXButton>
            </children>
        </AnchorPane>

        <!-- DARK OVERLAY -->
        <AnchorPane fx:id="invoiceMessage" visible="false" managed="false"
                    style="-fx-background-color: rgba(0,0,0,0.6);" prefWidth="1050" prefHeight="717">

            <children>
                <Label text="Processing Payment..."
                       layoutX="350" layoutY="330"
                       style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
            </children>
        </AnchorPane>

    </children>

</AnchorPane>
