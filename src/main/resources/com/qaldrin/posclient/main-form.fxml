<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #2c3e50;"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.qaldrin.posclient.controller.MainformController">

    <children>

        <!-- Center Content Box -->
        <VBox alignment="CENTER"
              prefWidth="400" prefHeight="520"
              layoutX="200" layoutY="40"
              spacing="30"
              style="-fx-background-color: #1f2a35;
                     -fx-background-radius: 15;
                     -fx-border-color: #34495e;
                     -fx-border-radius: 15;
                     -fx-border-width: 1;">
            <padding>
                <Insets top="30" bottom="30" right="30" left="30"/>
            </padding>

            <children>

                <!-- Title -->
                <Label text="Welcome to POS System"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 26px; -fx-font-weight: bold;" />

                <!-- PIN Input Section -->
                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Enter Your PIN:"
                               style="-fx-text-fill: #ecf0f1; -fx-font-size: 16px;" />

                        <TextField fx:id="pinTextField"
                                   alignment="CENTER"
                                   editable="false"
                                   prefWidth="200" prefHeight="40"
                                   promptText="Enter PIN"
                                   style="-fx-font-size: 18px;
                                          -fx-text-fill: white;
                                          -fx-background-color: #2c3e50;
                                          -fx-background-radius: 8;
                                          -fx-border-color: #25D366;
                                          -fx-border-radius: 8;
                                          -fx-padding: 6;" />
                    </children>
                </VBox>

                <!-- Number Pad -->
                <GridPane alignment="CENTER" hgap="15" vgap="15">
                    <children>

                        <!-- Row 1 -->
                        <Button fx:id="btn1" text="1" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn2" text="2" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="1"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn3" text="3" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="2"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>

                        <!-- Row 2 -->
                        <Button fx:id="btn4" text="4" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.rowIndex="1"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn5" text="5" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="1" GridPane.rowIndex="1"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn6" text="6" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="2" GridPane.rowIndex="1"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>

                        <!-- Row 3 -->
                        <Button fx:id="btn7" text="7" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.rowIndex="2"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn8" text="8" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="1" GridPane.rowIndex="2"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn9" text="9" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="2" GridPane.rowIndex="2"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>

                        <!-- Row 4 -->
                        <Button fx:id="btnClear" text="C" onAction="#onClearClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.rowIndex="3"
                                style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btn0" text="0" onAction="#onNumberClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="1" GridPane.rowIndex="3"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>
                        <Button fx:id="btnDelete" text="âŒ«" onAction="#onDeleteClicked"
                                prefWidth="70" prefHeight="55"
                                GridPane.columnIndex="2" GridPane.rowIndex="3"
                                style="-fx-background-color: #f39c12; -fx-text-fill: white;
                                       -fx-font-size: 18px; -fx-background-radius: 10;"/>

                    </children>
                </GridPane>

                <!-- Login Buttons -->
                <VBox alignment="CENTER" spacing="10">
                    <children>
                        <Button fx:id="loginBtn" text="Login" onAction="#onLoginClicked"
                                prefWidth="180" prefHeight="45"
                                style="-fx-background-color: #25D366; -fx-text-fill: white;
                                       -fx-font-weight: bold; -fx-background-radius: 10;
                                       -fx-font-size: 16px;" />

                        <Button fx:id="getStartedbtn" text="Get Started" onAction="#onGetStarted"
                                prefWidth="180" prefHeight="45"
                                style="-fx-background-color: #34495e; -fx-text-fill: white;
                                       -fx-background-radius: 10; -fx-font-size: 15px;" />
                    </children>
                </VBox>

            </children>
        </VBox>

    </children>
</AnchorPane>
