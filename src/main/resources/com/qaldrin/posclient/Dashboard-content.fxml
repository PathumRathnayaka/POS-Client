<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="717.0" prefWidth="1050.0"
            style="-fx-background-color: #2c3e50;"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qaldrin.posclient.controller.DashboardContentController">

    <children>

        <!-- Title -->
        <Label layoutX="20.0" layoutY="20.0" text="Product Sale"
               style="-fx-text-fill: #ecf0f1; -fx-font-size: 22px; -fx-font-weight: bold;" />

        <!-- Search Field -->
        <TextField fx:id="searchField"
                   layoutX="300.0" layoutY="18.0"
                   prefWidth="730.0" prefHeight="35.0"
                   promptText="Search products by name or barcode..."
                   style="-fx-background-color: #1f2a35; -fx-text-fill: white; -fx-prompt-text-fill: #7f8c8d;
                          -fx-background-radius: 8px; -fx-border-radius: 8px;
                          -fx-border-color: #25D366; -fx-border-width: 1;" />

        <!-- Search Dropdown -->
        <ListView fx:id="searchDropdown"
                  layoutX="300.0" layoutY="55.0"
                  prefWidth="730.0" prefHeight="180.0"
                  visible="false" managed="false"
                  style="
    -fx-background-color: #1f2a35;
    -fx-control-inner-background: #1f2a35;
    -fx-border-color: #34495e;
    -fx-border-width: 1px;
    -fx-background-insets: 0;
    -fx-cell-size: 40px;
" />

        <!-- Table Container (Rounded Card Look) -->
        <AnchorPane layoutX="15.0" layoutY="70.0"
                    prefWidth="1020.0" prefHeight="460.0"
                    style="-fx-background-color: #1f2a35; -fx-background-radius: 12px;
                           -fx-border-radius: 12px; -fx-border-color: #34495e; -fx-border-width: 1;">

            <children>
                <TableView fx:id="saleTable"
                           layoutX="10.0" layoutY="10.0"
                           prefWidth="1000.0" prefHeight="440.0"
                           style="-fx-background-color: transparent; -fx-border-color: transparent;
                                  -fx-control-inner-background: #2c3e50; -fx-table-cell-border-color: #34495e;
                                  -fx-focus-color: #25D366; -fx-faint-focus-color: transparent;">

                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="75.0" />
                        <TableColumn fx:id="colName" text="Name" prefWidth="220.0" />
                        <TableColumn fx:id="colCategory" text="Category" prefWidth="160.0" />
                        <TableColumn fx:id="colSalePrice" text="Sale Price" prefWidth="160.0" />
                        <TableColumn fx:id="colQuantity" text="Qty" prefWidth="100.0" />
                        <TableColumn fx:id="colAmount" text="Amount" prefWidth="160.0" />
                    </columns>

                </TableView>
            </children>

        </AnchorPane>

        <!-- Summary Section -->
        <VBox spacing="6"
              layoutX="700.0" layoutY="545.0"
              prefWidth="320.0">

            <children>
                <Label fx:id="subtotalLabel" text="Subtotal: $0.00"
                       style="-fx-text-fill: #ecf0f1; -fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label fx:id="taxLabel" text="TAX: $0.00"
                       style="-fx-text-fill: #bdc3c7; -fx-font-size: 16px; -fx-font-weight: bold;" />

                <Label fx:id="totalLabel" text="Total: $0.00"
                       style="-fx-text-fill: #25D366; -fx-font-size: 22px; -fx-font-weight: bold;" />
            </children>

        </VBox>

    </children>

</AnchorPane>
