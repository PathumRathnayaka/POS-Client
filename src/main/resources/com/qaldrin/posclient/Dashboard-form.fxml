<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Cursor?>
<?import com.jfoenix.controls.JFXButton?>

<AnchorPane fx:id="DashBoard" prefHeight="766.0" prefWidth="1366.0"
            style="-fx-background-color: #1a1a1a;"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qaldrin.posclient.controller.DashboardFormController">

    <children>
        <!-- Main content area -->
        <AnchorPane fx:id="primaryScene" layoutX="5.0" layoutY="46.0"
                    prefHeight="717.0" prefWidth="1050.0"
                    style="-fx-background-color: #2c3e50; -fx-border-color: #34495e; -fx-border-width: 1px;" />

        <!-- Navigation panel -->
        <AnchorPane fx:id="navigationPane" layoutX="1059.0" layoutY="46.0"
                    prefHeight="717.0" prefWidth="301.0"
                    style="-fx-background-color: #2c3e50; -fx-border-color: #34495e; -fx-border-width: 1px;">

            <children>
                <!-- First Row -->
                <JFXButton fx:id="deleteButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onDeleteButtonClick" layoutX="5.0" layoutY="5.0" prefHeight="60.0" prefWidth="143.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Delete">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
                <JFXButton fx:id="quantityButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onQuantityButtonClick" layoutX="153.0" layoutY="5.0" prefHeight="60.0" prefWidth="143.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Quantity">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Second Row -->
                <JFXButton buttonType="RAISED" mnemonicParsing="false" onAction="#onNewCustomerButtonClick" layoutX="5.0" layoutY="70.0" prefHeight="60.0" prefWidth="143.0" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;" text="New Customer">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
                <JFXButton fx:id="lockBtn" buttonType="RAISED" mnemonicParsing="false" onAction="#lockOnClick" layoutX="153.0" layoutY="70.0" prefHeight="60.0" prefWidth="143.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Lock">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Third Row -->
                <JFXButton fx:id="pauseCustomer" buttonType="RAISED" mnemonicParsing="false"
                           onAction="#pauseCustomerOnClick"
                           layoutX="5.0" layoutY="135.0" prefHeight="60.0" prefWidth="143.0"
                           style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"
                           text="Pause Sale">
                    <cursor><Cursor fx:constant="HAND" /></cursor>
                </JFXButton>
                <JFXButton fx:id="syncDatabaseButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onSyncDatabaseClick" layoutX="153.0" layoutY="135.0" prefHeight="60.0" prefWidth="143.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Sync Database">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Quick Sale Button -->
                <JFXButton fx:id="quickSale" buttonType="RAISED" layoutX="5.0" layoutY="200.0" mnemonicParsing="false" onAction="#quickSaleOnClick" prefHeight="50.0" prefWidth="291.0" style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;" text="Quick Sale">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Payment Button -->
                <JFXButton fx:id="paymentButton" buttonType="RAISED" layoutX="5.0" layoutY="380.0" onAction="#onPaymentButtonClick" prefHeight="50.0" prefWidth="291.0" ripplerFill="#01b210" style="-fx-background-color: #25D366; -fx-text-fill: white; -fx-font-weight: bold;" text="Payment">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Bottom Grid - First Row -->
                <JFXButton buttonType="RAISED" mnemonicParsing="false" layoutX="5.0" layoutY="435.0" prefHeight="70.0" prefWidth="93.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Discount %">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
                <JFXButton buttonType="RAISED" mnemonicParsing="false" layoutX="103.0" layoutY="435.0" prefHeight="70.0" prefWidth="93.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Refund">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
                <JFXButton fx:id="dashboardButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onDashboardButtonClick" layoutX="201.0" layoutY="435.0" prefHeight="70.0" prefWidth="95.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Dashboard">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Bottom Grid - Second Row -->
                <JFXButton buttonType="RAISED" mnemonicParsing="false" layoutX="5.0" layoutY="510.0" prefHeight="70.0" prefWidth="93.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Cash Drawer">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
                <JFXButton buttonType="RAISED" mnemonicParsing="false" layoutX="103.0" layoutY="510.0" prefHeight="70.0" prefWidth="93.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Comment">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
                <JFXButton fx:id="productButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onProductClick" layoutX="201.0" layoutY="510.0" prefHeight="70.0" prefWidth="95.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Product">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>

                <!-- Bottom Grid - Third Row -->
                <JFXButton fx:id="settingButton" buttonType="RAISED" mnemonicParsing="false" onAction="#onSettingButtonClick" layoutX="201.0" layoutY="585.0" prefHeight="70.0" prefWidth="95.0" style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;" text="Setting">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </JFXButton>
            </children>
        </AnchorPane>

        <!-- Header -->
        <Pane layoutX="6.0" layoutY="6.0" prefHeight="37.0" prefWidth="1352.0" style="-fx-background-color: #34495e;">
            <children>
                <Label fx:id="connectionStatusLabel" layoutX="14.0" layoutY="9.0"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;"
                       text="Status: Checking connection..." />
                <Label fx:id="notificationlabel" layoutX="1221.0" layoutY="11.0"
                       text="Notification : 0"
                       style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #ecf0f1;" />
            </children>
        </Pane>
    </children>
</AnchorPane>