<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="412.0" prefWidth="375.0"
            style="-fx-background-color: #3b3b3b; -fx-background-radius: 12px; -fx-border-radius: 12px; -fx-border-color: #4a90e2; -fx-border-width: 2px;"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qaldrin.posclient.controller.QuantityNumberController">

    <children>

        <!-- Close button in top-right corner -->
        <Button fx:id="btnClose" text="✖"
                onAction="#onCloseClick"
                prefHeight="30.0" prefWidth="30.0"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"
                AnchorPane.topAnchor="5.0" AnchorPane.rightAnchor="5.0"/>

        <VBox alignment="CENTER" prefHeight="412.0" prefWidth="375.0" spacing="15.0">
            <children>
                <Label fx:id="titleLabel" alignment="CENTER" prefWidth="250.0"
                       style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;"
                       text="Change quantity" />
                <Label fx:id="subtitleLabel" alignment="CENTER" prefWidth="300.0"
                       style="-fx-font-size: 12px; -fx-text-fill: #cccccc;"
                       text="Enter quantity for next item" />
                <TextField fx:id="quantityField" alignment="CENTER" editable="false"
                           prefHeight="50.0" prefWidth="280.0"
                           style="-fx-background-color: #2c2c2c; -fx-border-color: #4a90e2; -fx-border-width: 1px; -fx-text-fill: #4a90e2; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 5px; -fx-border-radius: 5px;"
                           text="1" />
                <GridPane hgap="8.0" vgap="8.0" alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="65.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="65.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="65.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="60.0" prefWidth="65.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="60.0" prefHeight="65.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="65.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="65.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="60.0" prefHeight="65.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Button fx:id="btn1" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="1" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Button fx:id="btn2" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="2" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Button fx:id="btn3" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="3" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onDeleteClick" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-radius: 8px;"
                                text="⌫" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                        <Button fx:id="btn4" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="4" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Button fx:id="btn5" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="5" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button fx:id="btn6" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="6" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Button fx:id="btnEsc" mnemonicParsing="false" onAction="#onEscClick" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="ESC" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        <Button fx:id="btn7" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="7" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Button fx:id="btn8" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="8" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button fx:id="btn9" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="9" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                        <Button fx:id="btnEnterKey" mnemonicParsing="false" onAction="#onEnterClick" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-radius: 8px;"
                                text="↵" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        <Button fx:id="btnMinus" mnemonicParsing="false" onAction="#onMinusClick" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="-" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Button fx:id="btn0" mnemonicParsing="false" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Button fx:id="btnDot" mnemonicParsing="false" onAction="#onDotClick" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #4f4f4f; -fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-background-radius: 8px;"
                                text="." GridPane.columnIndex="2" GridPane.rowIndex="3" />
                        <Button fx:id="btnEnter" mnemonicParsing="false" onAction="#onEnterClick" prefHeight="60.0" prefWidth="65.0"
                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 20px; -fx-background-radius: 8px;"
                                text="✓" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </GridPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
