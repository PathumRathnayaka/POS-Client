<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="717.0" prefWidth="1050.0"
            xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.qaldrin.posclient.DashboardContentController">

    <children>
        <!-- Title Label -->
        <Label layoutX="19.0" layoutY="21.0" prefHeight="27.0" prefWidth="121.0" text="Product Sale">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Label>

        <!-- Main TableView -->
        <TableView fx:id="saleTable" layoutX="5.0" layoutY="76.0" prefHeight="459.0" prefWidth="1032.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="75.0" text="Id" />
                <TableColumn fx:id="colName" prefWidth="221.0" text="Name" />
                <TableColumn fx:id="colCategory" prefWidth="187.0" text="Category" />
                <TableColumn fx:id="colSalePrice" prefWidth="171.0" text="Sale Price" />
                <TableColumn fx:id="colQuantity" prefWidth="103.0" text="Quantity" />
                <TableColumn fx:id="colAmount" prefWidth="172.0" text="Amount" />
            </columns>
        </TableView>

        <!-- Search TextField -->
        <TextField fx:id="searchField"
                   layoutX="302.0" layoutY="26.0"
                   prefHeight="31.0" prefWidth="732.0"
                   promptText="Search products by name or barcode..." />

        <!-- Search Dropdown ListView -->
        <ListView fx:id="searchDropdown"
                  layoutX="384.0" layoutY="60.0"
                  managed="false"
                  prefHeight="150.0" prefWidth="650.0"
                  style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);"
                  visible="false" />

        <!-- Summary Labels -->
        <Label fx:id="subtotalLabel" layoutX="694.0" layoutY="566.0" prefHeight="31.0" prefWidth="243.0" text="Subtotal: $0.00">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label fx:id="taxLabel" layoutX="694.0" layoutY="597.0" prefHeight="31.0" prefWidth="243.0" text="TAX: $0.00">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Label>

        <Label fx:id="totalLabel" layoutX="694.0" layoutY="628.0" prefHeight="31.0" prefWidth="243.0" text="Total: $0.00">
            <font>
                <Font name="System Bold" size="21.0" />
            </font>
        </Label>
    </children>

</AnchorPane>