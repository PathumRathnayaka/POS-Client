                <!-- Payment Button -->
                <JFXButton fx:id="paymentButton" buttonType="RAISED" layoutX="6.0" layoutY="434.0" onAction="#onPaymentButtonClick" prefHeight="50.0" prefWidth="294.0" ripplerFill="#01b210" text="Payment" AnchorPane.leftAnchor="6.0" AnchorPane.topAnchor="434.0">
